<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Location"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/txtLocation"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintTop_toTopOf="@+id/txtLocation"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="End Time"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/txtEndTime"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintTop_toTopOf="@+id/txtEndTime"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Start Time"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/txtStartTime"
        app:layout_constraintTop_toTopOf="@+id/txtStartTime"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Day"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/txtDay"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintTop_toTopOf="@+id/txtDay"
        android:layout_marginTop="12dp" />

    <Button
        android:background="@drawable/gradient_lightrose"
        android:textColor="#ffff"
        android:id="@+id/btnDeleteClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="37dp"
        android:layout_marginLeft="29dp"
        android:text="Delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/txtLocation"
        android:layout_width="241dp"
        android:layout_height="40dp"
        android:layout_marginEnd="28dp"

        android:layout_marginRight="28dp"
        android:layout_marginStart="28dp"

        android:hint="ASB 216"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/btnAddNewClass"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEndTime"
        tools:layout_editor_absoluteX="115dp" />

    <EditText
        android:id="@+id/txtEndTime"
        android:layout_width="239dp"
        android:layout_height="39dp"
        android:layout_marginEnd="28dp"


        android:layout_marginRight="27dp"
        android:layout_marginStart="28dp"
        android:hint="3:00 PM"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/txtLocation"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtStartTime"
        tools:layout_editor_absoluteX="118dp" />

    <EditText
        android:id="@+id/txtStartTime"

        android:layout_width="237dp"
        android:layout_height="42dp"
        android:layout_marginEnd="28dp"

        android:layout_marginRight="28dp"
        android:layout_marginStart="28dp"

        android:hint="1:00 PM"

        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/txtEndTime"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDay"
        tools:layout_editor_absoluteX="119dp" />

    <EditText
        android:id="@+id/txtDay"
        android:layout_width="239dp"
        android:layout_height="42dp"
        android:layout_marginEnd="28dp"

        android:layout_marginRight="28dp"
        android:layout_marginStart="28dp"
        android:hint="Monday"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/txtStartTime"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCourse"
        tools:layout_editor_absoluteX="117dp" />

    <EditText
        android:id="@+id/txtCourse"
        android:layout_width="241dp"
        android:layout_height="39dp"
        android:layout_marginEnd="28dp"

        android:layout_marginRight="28dp"
        android:layout_marginStart="28dp"
        android:hint="INFS1609_A"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/txtDay"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="115dp" />

    <Button
        android:background="@drawable/gradient_lightrose"
        android:textColor="#ffff"
        android:id="@+id/btnAddNewClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:layout_marginRight="28dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="37dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Course ID"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/txtCourse"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintTop_toTopOf="@+id/txtCourse"
        android:layout_marginTop="8dp" />

</android.support.constraint.ConstraintLayout>