<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
        android:id="@+id/numLates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="NumLate"
        android:textSize="14sp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/tutName"
        app:layout_constraintLeft_toRightOf="@+id/textView13"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="18dp"
        android:layout_weight="2"
        android:gravity="left"
        android:text="Absentees:"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tutImage"
        app:layout_constraintTop_toBottomOf="@+id/tutName"
        app:layout_constraintVertical_bias="0.0"/>

    <TextView
        android:id="@+id/numAbsent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="numAbsent"
        android:textSize="14sp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/tutName"
        app:layout_constraintLeft_toRightOf="@+id/textView10"
        android:layout_marginLeft="11dp"/>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="Lates:"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/tutName"
        app:layout_constraintLeft_toRightOf="@+id/numAbsent"
        android:layout_marginLeft="7dp"/>

    <TextView
        android:id="@+id/tutName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="9dp"
        android:layout_weight="10"
        android:fontFamily="casual"
        android:text="Tutorial ID"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/tutImage"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="241dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"/>

    <ImageView
        android:id="@+id/tutImage"
        android:layout_width="36dp"
        android:layout_height="56dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/tut"/>

</android.support.constraint.ConstraintLayout>