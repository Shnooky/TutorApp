<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgNGStudent"
        android:layout_width="196dp"
        android:layout_height="178dp"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="52dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btnNGOption2"
        android:layout_width="311dp"
        android:layout_height="43dp"
        android:text="Student 2"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/btnNGOption1"
        app:layout_constraintHorizontal_bias="0.508"
        android:textColor="#ffff"
        android:background="@drawable/regular_answer"
        android:elevation="5dp"
        android:stateListAnimator="@null"/>

    <Button
        android:id="@+id/btnNGOption4"
        android:layout_width="311dp"
        android:layout_height="43dp"
        android:text="Student 4"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnNGOption3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:textColor="#ffff"
        android:background="@drawable/regular_answer"
        android:elevation="5dp"
        android:stateListAnimator="@null"/>

    <Button
        android:id="@+id/btnNGOption3"
        android:layout_width="311dp"
        android:layout_height="43dp"
        android:text="Student 3"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/btnNGOption2"
        android:textColor="#ffff"
        android:background="@drawable/regular_answer"
        android:elevation="5dp"
        android:stateListAnimator="@null"
        />

    <Button
        android:id="@+id/btnNGOption1"
        android:layout_width="311dp"
        android:layout_height="43dp"
        android:text="Student 1"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="46dp"
        app:layout_constraintTop_toBottomOf="@+id/imgNGStudent"
        app:layout_constraintHorizontal_bias="0.508"
        android:textColor="#ffff"
        android:background="@drawable/regular_answer"
        android:elevation="5dp"
        android:stateListAnimator="@null"/>

    <Button
        android:id="@+id/btnNGNextQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnNGOption4"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="#ffff"
        android:background="@drawable/gradient_lightrose"
        android:elevation="5dp"
        android:stateListAnimator="@null"/>
</android.support.constraint.ConstraintLayout>